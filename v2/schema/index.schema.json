{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "v2/schema/index.schema.json",
  "title": "Index",
  "description": "Maps device codenames to their human-readable names.",
  "patternProperties": {
    "\\w": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "formfactor": {
          "$ref": "formfactor.schema.json#"
        },
        "operating_systems": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    }
  }
}
